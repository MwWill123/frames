<IfModule mod_headers.c>
    # 1. Permite a origem do seu frontend (Vercel)
    # Se quiser liberar para todos (menos seguro), use "*" no lugar da URL
    Header set Access-Control-Allow-Origin "https://frames-silk.vercel.app"

    # 2. Define quais métodos são aceitos
    Header set Access-Control-Allow-Methods "GET, POST, PUT, DELETE, OPTIONS"

    # 3. Define quais cabeçalhos podem ser enviados (Content-Type é essencial para JSON)
    Header set Access-Control-Allow-Headers "Content-Type, Authorization, X-Requested-With"
</IfModule>

# 4. TRATAMENTO DO PREFLIGHT (O Pulo do Gato)
# Se o navegador enviar um pedido OPTIONS, o servidor responde "200 OK" imediatamente
# e para o processamento. O PHP nem chega a ser executado.
<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteCond %{REQUEST_METHOD} OPTIONS
    RewriteRule ^(.*)$ $1 [R=200,L]
</IfModule>